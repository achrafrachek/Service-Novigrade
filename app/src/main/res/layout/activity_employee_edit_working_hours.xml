<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        tools:ignore="MissingConstraints">

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Working Hours"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="380dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3pt"
                    android:layout_marginTop="30dp"
                    android:text="Monday - Friday"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="3pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3pt"
                    android:layout_marginTop="40dp"
                    android:text="Saturday - Sunday"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="3pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3pt"
                    android:layout_marginTop="37dp"
                    android:text="Holidays"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="3pt" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="160dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="160dp">

                <TextView
                    android:id="@+id/edit_start_time_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:text="Edit time"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:layout_marginLeft="45dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="-"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/edit_end_time_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Edit time"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="160dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="160dp">

                <TextView
                    android:id="@+id/edit_start_time_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:text="Edit time"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:layout_marginLeft="45dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="-"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/edit_end_time_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Edit time"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="160dp"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="160dp">

                <TextView
                    android:id="@+id/edit_start_time_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:text="Edit time"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:layout_marginLeft="45dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="-"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/edit_end_time_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Edit time"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="90dp">

                <Button
                    android:id="@+id/edit_cancel"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Cancel"
                    android:layout_weight="1"
                    android:backgroundTint="#f1f1f1"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/edit_update"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Update"
                    android:backgroundTint="#f1f1f1"
                    android:layout_weight="1"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>