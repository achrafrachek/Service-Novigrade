<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeBranchService">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/homebranchCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Available : "
        android:layout_marginLeft="40dp"
        android:textSize="20dp"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/addService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:layout_alignBaseline="@id/homebranchCount"
        android:layout_marginLeft="280dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/homebranchCount"
        android:text="Liste des Services : "
        android:layout_marginTop="25dp"
        android:textSize="17dp"
        android:textStyle="bold|italic"
        android:id="@+id/textliste"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homeEmployeRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textliste"
        android:layout_marginTop="30dp"/>
    </RelativeLayout>

</ScrollView>