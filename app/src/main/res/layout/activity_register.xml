<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginScreen"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/textRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textSize="40dp"
        android:alpha="0.8"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SpinnerUserT"
        android:layout_below="@id/textRegister"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/regiUsername"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:inputType="text"
        android:hint="Username"/>

    <EditText
        android:id="@+id/regiPassword"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/regiUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:hint="Password"/>
    <EditText
        android:id="@+id/regiEmail"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/regiPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"
        android:hint="Email Adress"/>

    <Button
        android:id="@+id/butCreate"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/regiEmail"
        android:text="Create Account"
        android:textColor="#F5F7F6"
        android:alpha="0.8"
        android:background="@drawable/btn_shape"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/butCreate"
        android:text="Already Have an Account?"
        android:textColor="#F5F7F6"
        android:alpha="0.7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"/>



</RelativeLayout>